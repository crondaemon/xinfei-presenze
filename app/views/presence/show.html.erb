<div class='container-fluid'>
	<h3 class='page-header text-center'>Presenze del periodo<br/>
		<span class='label label-primary'>
			<%= l(@from, format: '%e %B') %> - <%= l(@to, format: '%e %B') %>
		</span>
	</h3>
	<div class='row'>
		<div class='col-md-12'>
			<%= content_tag :a, 'Cambia periodo', id: 'date-change' %>
			<div class='panel panel-default display-none' id='date-change-form'>
				<div class='panel-body'>
					<%= bootstrap_form_tag url: presence_show_path, layout: :inline do |f| %>
						<%= f.text_field :from, skip_label: true, placeholder: 'Inizio', value: params['from'],
							class: 'datetimepicker form-control' %>
						<%= f.text_field :to, skip_label: true, placeholder: 'Fine', value: params['to'],
							class: 'datetimepicker form-control' %>
						<%= f.submit 'Invia', class: 'btn btn-primary' %>
					<% end %>
				</div>
			</div>
	  	<div class='panel panel-default'>
				<div class='panel-body'>
					<div class='table-responsive'>
						<%= content_tag 'table', class: 'table table-striped table-hover' do %>
							<thead>
								<tr>
									<th></th>
									<% @days.each do |day| %>
										<th><%= link_to(l(day, format: '%e %b'), presence_day_path(day: day)) %></th>
									<% end %>
									<% if current_user.is?(:admin) %>
										<th></th>
										<th></th>
									<% end %>
								</tr>
							</thead>
							<tbody>
								<% @presence_persons.each_pair do |name, days| %>
									<tr>
										<td><%= name %></td>
										<% @days.each do |day| %>
											<td>
												<% if days.include? day %>
													<%= image_tag 'check.png', height: '15px' %>
												<% end %>
											</td>
										<% end %>
										<% if current_user.is?(:admin) %>
											<td>
												<%= days.count %>/<%= @days.count %>
											</td>
											<td>
												<span class='badge'><%= (days.count.to_f / @days.count * 100 ).round %>%</span>
											</td>
										<% end %>
									</tr>
								<% end %>
								<tr>
									<td><strong>Totale</strong></td>
									<% @days.each do |day| %>
										<td>
											<span class='badge'>
												<%= @presence_persons.values.flatten.select{|d| d == day}.count %>
											</span>
										</td>
									<% end %>
									<% if current_user.is?(:admin) %>
										<td></td>
										<td></td>
									<% end %>
								</tr>
							</tbody>
						<% end %>
					</div>
				</div>
			</div>
			<div class='panel panel-default'>
				<div class='panel-body'>
					<%= link_to('Esporta', presence_show_path(from: params['from'], to: params['to'], format: :csv),
						class: 'btn btn-primary') %>
				</div>
			</div>
		</div>
	</div>
</div>
