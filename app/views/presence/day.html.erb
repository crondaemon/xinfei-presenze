<div class='container-fluid'>
	<h3 class='page-header'>Presenze del giorno <%= @day %></h3>
	<div class='row'>
		<div class='col-md-12'>
	  	<div class='panel panel-default'>
				<div class='panel-body'>
					<%= content_tag 'table', class: 'table table-striped table-hover', id: 'sources-table' do %>
						<thead>
							<tr>
								<th>Nome</th>
								<th>Presente</th>
								<% if current_user.is?(:admin) %>
									<th></th>
									<th></th>
								<% end %>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
								<tr>
									<td class='click-presence' data-user='<%= user.id %>' data-day='<%= @day %>'><%= user.fullname %></td>
									<td class='click-presence' data-user='<%= user.id %>' data-day='<%= @day %>'>
										<div id='user-<%= user.id %>-present' class='<%= user.present? ? "" : "display-none" %>'>
											<%= image_tag 'check.png', height: '17px' %>
										</div>
									</td>
									<% if current_user.is?(:admin) %>
										<td><%= link_to('Mostra', user) %></td>
										<td><%= link_to('Disabilita', presence_disable_path(id: user, day: @day)) if current_user != user %></td>
									<% end %>
								</tr>
							<% end %>
						</tbody>
					<% end %>
				</div>
			</div>
		</div>
  </div>
</div>
